	{
		"productName": "TruevisionDesigner",
		"publish": [
			{
				"provider": "github",
				"owner": "truevisionai",
				"repo": "designer",
				"releaseType": "release"
			}
		],
		"directories": {
			"output": "release/",
			"buildResources": "build/"
		},
		"files": [
			"dist/**/*",
			"node_modules/**/*",
			"main.js",
			"preload.js",
			"index.html",
			"package.json"
		],
		"extraResources": [
			"default-project",
			"app-update.yml"
		],
		"extraFiles": [],
		"linux": {
			"category": "Utility",
			"target": [
				"AppImage",
				"snap"
			]
		},
		"win": {
			"target": "nsis"
		},
		"nsis": {
			"oneClick": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	}
